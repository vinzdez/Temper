<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/activityImg"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:contentDescription="activityImage"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/leftlesson" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="checkmark"
        android:src="@drawable/checkmark"
        app:layout_constraintEnd_toEndOf="@+id/activityImg"
        app:layout_constraintTop_toTopOf="@+id/activityImg" />


    <ImageView
        android:id="@+id/centerImg"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:contentDescription="activityImage"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/leftlesson" />

    <TextView
        android:id="@+id/level_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/euclidcircularbregular"
        android:textColor="@color/user_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/activityImg"
        app:layout_constraintStart_toStartOf="@+id/activityImg"
        app:layout_constraintTop_toBottomOf="@+id/activityImg"
        tools:text="Find your tools and very long text" />


</androidx.constraintlayout.widget.ConstraintLayout>